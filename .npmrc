# Configuración de pnpm para el monorepo
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=false

# Preferencia para instalar desde el registro de npm
registry=https://registry.npmjs.org/

# Establecer profundidad máxima para instalar dependencias
node-linker=isolated

# Habilitar store en el workspace
shared-workspace-lockfile=true
